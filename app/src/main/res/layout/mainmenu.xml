<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:padding="20dp">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="AR Demos"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="20dp">


        <Button
            android:id="@+id/openCV2D"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="switchCV2D"
            android:padding="20dp"
            android:text="OpenCV 2D"
            android:textSize="25sp" />

        <Button
            android:id="@+id/openCV3D"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="switchCV3D"
            android:padding="20dp"
            android:text="OpenCV 3D"
            android:textSize="25sp" />

        <Button
            android:id="@+id/ARcore"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="switchARCore"
            android:padding="20dp"
            android:text="ARCore"
            android:textSize="25sp" />
    </LinearLayout>
</LinearLayout>

